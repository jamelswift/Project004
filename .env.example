# JWT/Auth (ต้องเปลี่ยนเป็นค่าจริง - สุ่ม 32+ ตัวอักษร)
JWT_SECRET=your-secret-key-change-in-production-min-32-chars
JWT_REFRESH_SECRET=your-refresh-secret-key-change-in-production-min-32-chars

# AWS Configuration
AWS_REGION=ap-southeast-2
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key

# DynamoDB Tables
DYNAMODB_USERS_TABLE=Users
DYNAMODB_DEVICE_STATUS_TABLE=DeviceStatus
DYNAMODB_SENSOR_DATA_TABLE=SensorData
DYNAMODB_NOTIFICATION_LOGS_TABLE=NotificationLogs

# Frontend
FRONTEND_ORIGIN=http://localhost:3000,https://app.example.com

# Server
PORT=5000
NODE_ENV=development

# Email Service (Optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password

# AWS IoT (Optional)
AWS_IOT_ENDPOINT=your-endpoint-ats.iot.ap-southeast-2.amazonaws.com
AWS_IOT_REGION=ap-southeast-2
# TLS Mutual Auth certs (optional; required only if backend subscribes MQTT directly)
AWS_IOT_CERT_PATH=C:\\path\\to\\certificate.pem.crt
AWS_IOT_KEY_PATH=C:\\path\\to\\private.pem.key
AWS_IOT_CA_PATH=C:\\path\\to\\AmazonRootCA1.pem
ADMIN_EMAIL=admin@example.com

# S3 (Optional)
S3_BUCKET_NAME=iot-sensor-data-bucket
